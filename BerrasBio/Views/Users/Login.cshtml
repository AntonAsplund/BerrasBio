@model BerrasBio.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["WrongInput"] != null)
        {
            <span class="text-danger"><strong>Incorrect username or password.</strong></span>
        }
        @if (TempData["UserCreated"] != null)
        {
            <span class="text-success"><strong>User sucessfully created, please log in.</strong></span>
        }
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Create" asp-controller="Users">Register a new user</a>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}