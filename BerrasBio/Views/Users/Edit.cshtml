@model BerrasBio.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="details-description">Edit</h1>

<hr class="details-description"/>
<div class="row details-description">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            @if (TempData["UserNameTaken"] != null)
            { 
                <span class="text-danger">Username is already taken.</span>
            }
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username:</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First name:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last name:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            @if (TempData["IsAdmin"] != null)
            {
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password:</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                    </label>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Password" />
            }
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone number:</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">If you wish for a password change, please contact us at 1-800-CALL-BERRA.<BR><BR></span>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (TempData["IsAdmin"] != null){
    <div>
        <a asp-action="Index">Go to full users list</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>

    .details-description {
        color: #c2c2c2;
    }

    .main-content-container {
        background-color: black;
    }

    .gray-box {
        background-color: black;
    }
</style>