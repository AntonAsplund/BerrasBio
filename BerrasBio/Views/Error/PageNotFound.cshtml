@model BerrasBio.Models.Movie


@{
    ViewData["Title"] = "PageNotFound";

    string urlString = "berrasbio.se" + (string)TempData["path"];
}

    <h1 class="details extraPaddingT2">Page not found - 404</h1>

<div class="details-description">

    <br>

    <h4>We're sorry but the page with URL @urlString cannot be found</h4>
    <h4 class="extraPaddingB3">If problem persists please feel free to contact us at 1-800-CALL-BERRA.</h4>
    <h4>Might we suggest one of our current viewings?</h4>
</div>

<div class="mt-3 d-flex flex-row align-items-center border-sep">
    <div>
        <img class="img-fluid" height="170" width="85" src="@Model.PosterURL" alt="@Model.Title poster image" />
    </div>
    <div class="text-container">
        <h4><a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" class="text-decoration-none title">@Model.Title</a></h4>

        <span class="details">
            @Model.Cathegory  <strong>|</strong>
            @Model.LengthMinute min  <strong>|</strong> PG:
            @if (Model.PerentalGuidance == 0)
            {
                @:Universal
            }
            else
            {
                @Model.PerentalGuidance
            }
            <br>
            Next viewing: @TempData["viewing"]
        </span>
    </div>
</div>

<div class="link-padding">
    <a class="btn-link" asp-controller="Viewings" asp-action="Index">See all our current viewings</a> <strong>|</strong>
    <a class="btn-link" asp-controller="Home" asp-action="Index">Return to main</a>
</div>

<link href="~/css/Error/StyleSheet.css" rel="stylesheet" />