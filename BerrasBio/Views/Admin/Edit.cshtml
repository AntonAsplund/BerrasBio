@model BerrasBio.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MovieId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="Title" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="LengthMinute" class="form-control" hidden/>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPlaying" /> @Html.DisplayNameFor(model => model.IsPlaying)
                </label>
            </div>
            <div class="form-group">
                <input asp-for="Cathegory" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="ReleaseYear" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="Plot" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="Director" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="Actors" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="PosterURL" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="PerentalGuidance" class="control-label"></label>
                <input asp-for="PerentalGuidance" class="form-control" />
                <span asp-validation-for="PerentalGuidance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark mt-3" asp-action="Details" asp-route-id="@Model.MovieId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .container {
        background-color: transparent;
    }

    #layoutBackground {
        background-image: none;
        background-color: white;
    }
</style>