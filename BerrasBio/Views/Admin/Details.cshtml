@model BerrasBio.Models.Movie
@{
    ViewData["Title"] = "Details";
}
<div>
    <div class="d-flex flex-row align-items-end">

        <div>
            <img class="img-fluid" height="300" width="200" src="@Model.PosterURL" alt="@Model.Title poster image" />
        </div>

        <div class="header-title">
            <h3 >@Model.Title</h3>
            <span class="font-weight-bold">@Model.Cathegory</span> <br />
            <span>
                @Model.LengthMinute min | PG:
                @if (Model.PerentalGuidance == 0)
                {
                    @:Universal
                }
                else
                {
                    @Model.PerentalGuidance
                }
            </span>
        </div>

    </div>

    <div class="mt-5">
        <p>@Model.Plot</p>
        <span><text >Director: </text><br />@Model.Director</span> <br /><br />
        <span><text >Actors: </text><br />@Model.Actors</span> <br /><br />
        <span><text >Release: </text><br />@Model.ReleaseYear</span>
    </div>
    <div class="mt-3">
        <a asp-action="CreateViewing" asp-route-id="@Model.MovieId" class="btn bg-danger text-white">Add viewing</a>
        <a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn bg-danger text-white">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.MovieId" class="btn bg-danger text-white">Delete</a>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark mt-5">Back</a>
</div>
<style>
    div > img {
        border-radius: 5px;
        border: 0.5px solid white;
    }

    .header-title {
        margin-left: 1em;
    }

    .container {
        background-color: transparent;
    }

    #layoutBackground {
        background-image: none;
        background-color: white;
    }
</style>
