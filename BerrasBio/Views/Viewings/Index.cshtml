@model IEnumerable<BerrasBio.Models.Viewing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Visningar för <b>@Model.First().Movie.Title</b></h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="CheckView" asp-route-id="@Model.First().MovieId" asp-route-order="Time">Start tid</a>

                
            </th>
            <th>
                Salong
            </th>
            <th>
                <a asp-action="CheckView" asp-route-id="@Model.First().MovieId" asp-route-order="Num">Platser kvar</a>

                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormatedStartTime )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salon.Name)
            </td>
            <td>

               @item.SeatsLeft
            </td>
            <td>
               <a asp-action="Book" asp-route-id="@item.ViewingId">Boka biljetter</a>
            </td>
            
        </tr>
}
    </tbody>
</table>
