@model BerrasBio.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h3>@Model.Title</h3>
        <span class="font-weight-bold">@Model.Cathegory</span> <br />
        <span>
            @Model.LengthMinute min | PG:
            @if (Model.PerentalGuidance == 0)
            {
                @:Universal
            }
            else
            {
                @Model.PerentalGuidance
            }
        </span>
    </div>

    <div class="card-body">
        <p class="card-text">@Model.Plot</p>
        <span><strong>Director: </strong><br />@Model.Director</span> <br /><br />
        <span><strong>Actors: </strong><br />@Model.Actors</span>
    </div>

</div>
<div>
    <a asp-action="Index" class="btn btn-outline-dark mt-3">Back</a>
</div>
