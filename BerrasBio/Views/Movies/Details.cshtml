@model BerrasBio.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="d-flex flex-row align-items-end" style="background-color:white;">

        <div>
            <img class="img-fluid" height="300" width="200" src="@Model.PosterURL" alt="@Model.Title poster image" />
        </div>

        <div class="header-title">
            <h3>@Model.Title</h3>
            <span class="font-weight-bold">@Model.Cathegory</span> <br />
            <span>
                @Model.LengthMinute min | PG:
                @if (Model.PerentalGuidance == 0)
                {
                    @:Universal
                }
                else
                {
                    @Model.PerentalGuidance
                }
            </span>
        </div>
    </div>

    <div class="mt-5">
        <p>@Model.Plot</p>
        <span><strong>Director: </strong><br />@Model.Director</span> <br /><br />
        <span><strong>Actors: </strong><br />@Model.Actors</span> <br /><br />
        <span><strong>Release: </strong><br />@Model.ReleaseYear</span>
    </div>

    <div class="mt-3">
        <a asp-action="CheckView" asp-route-id="@Model.MovieId" asp-route-order="Num" class="btn btn-outline-dark">Visningar</a>
    </div>

</div>
<div>
    <a asp-action="Index" class="btn btn-dark mt-5">Back</a>
</div>

<style>
    div > img
    {
        border-radius: 5px;
    }

    .header-title
    {
        margin-left: 1em;
    }

</style>
