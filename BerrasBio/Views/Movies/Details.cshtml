@model BerrasBio.Models.Movie
@{
    ViewData["Title"] = "Details";
}
<div>
    <div class="d-flex flex-row align-items-end">

        <div>
            <img class="img-fluid" height="300" width="200" src="@Model.PosterURL" alt="@Model.Title poster image" />
        </div>

        <div class="header-title">
            <h3 class="movie-title">@Model.Title</h3>
            <span class="font-weight-bold movie-title">@Model.Cathegory</span> <br />
            <span class="movie-cat">
                @Model.LengthMinute min | PG:
                @if (Model.PerentalGuidance == 0)
                {
                    @:Universal
                }
                else
                {
                    @Model.PerentalGuidance
                }
            </span>
        </div>

    </div>

    <div class="mt-5 movie-title">
        <p>@Model.Plot</p>
        <span><text class="movie-cat">Director: </text><br />@Model.Director</span> <br /><br />
        <span><text class="movie-cat">Actors: </text><br />@Model.Actors</span> <br /><br />
        <span><text class="movie-cat">Release: </text><br />@Model.ReleaseYear</span>
    </div>
    <div class="mt-3">
        <a asp-action="CheckView" asp-route-id="@Model.MovieId" asp-route-order="Num" class="btn bg-danger text-white">Visningar</a>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark mt-5">Back</a>
</div>
<style>
    div > img {
        border-radius: 5px;
        border: 0.5px solid white;
    }

    .header-title {
        margin-left: 1em;
    }

    .container {
        background-color: transparent;
    }

    #layoutBackground {
        background-image: none;
        background-color: black;
    }

    .movie-title {
        color: #F5F5F5;
    }

    .movie-cat {
        color: #CFCFCF;
    }

    .btn {
        cursor: pointer;
    }
</style>
