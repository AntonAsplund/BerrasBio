@model IEnumerable<BerrasBio.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="movies">Movies</h1>

<div class="movies-list">

    @foreach (var movie in Model)
    {
        <div class="mt-3 d-flex flex-row align-items-center border-sep">
            <div>
                <img class="img-fluid" height="150" width="75" src="@movie.PosterURL" alt="@movie.Title poster image" />
            </div>
            <div class="text-container">
                <h4><a asp-action="Details" asp-route-id="@movie.MovieId" class="text-decoration-none title">@movie.Title</a></h4>

                <span class="details">
                    @movie.Cathegory  <strong>|</strong>
                    @movie.LengthMinute min  <strong>|</strong> PG:
                    @if (movie.PerentalGuidance == 0)
                    {
                        @:Universal
                    }
                    else
                    {
                        @movie.PerentalGuidance
                    }
                </span>
            </div>
        </div>
    }
</div>

<style>

    .text-container
    {
        margin-left: 1em;
        font-family:Arial, Helvetica, sans-serif;
    }

    div > img
    {
        border-radius: 5px;
        margin-bottom: 0.5em;
    }

    .title
    {
        color: #F5F5F5;
        font-weight: bold;
    }

    .title:hover
    {
        border-bottom: 2px solid #F5F5F5;
        color: #F5F5F5;
    }

    .container
    {
        background-color:transparent;
    }

    #layoutBackground
    {
        background-image: none;
        background-color:black;
    }

    .movies
    {
        color: #F5F5F5;
    }

    .border-sep
    {
        border-bottom: 1px solid #646464;
    }

    .details
    {
        color: #D5D5D5;
    }

    .movies-list
    {
        margin-top: 5em;
    }

    .gray-box
    {
        margin-left: 8em;
    }
</style>
