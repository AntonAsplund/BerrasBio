@model IEnumerable<BerrasBio.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title-white">Movies</h1>

<div class="movies-list">

    @foreach (var movie in Model)
    {
        <div class="mt-3 d-flex flex-row align-items-center border-sep">
            <div>
                <img class="img-fluid poster-img-list" height="150" width="75" src="@movie.PosterURL" alt="@movie.Title poster image" />
            </div>
            <div class="text-container">
                <h4><a asp-action="Details" asp-route-id="@movie.MovieId" class="text-decoration-none title">@movie.Title</a></h4>

                <span class="details-white">
                    @movie.Cathegory  <strong>|</strong>
                    @movie.LengthMinute min  <strong>|</strong> PG:
                    @if (movie.PerentalGuidance == 0)
                    {
                        @:Universal
                    }
                    else
                    {
                        @movie.PerentalGuidance
                    }
                </span>
            </div>
        </div>
    }
</div>

<style>
    .container
    {
        background-color:transparent;
    }

    #layoutBackground
    {
        background-image: none;
        background-color:black;
    }

    .gray-box
    {
        margin-left: 8em;
    }
</style>
