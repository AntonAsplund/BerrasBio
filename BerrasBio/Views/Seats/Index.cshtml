@model IEnumerable<BerrasBio.Models.Seat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Salong: @Model.First().Salon.Name</h1>

<p>
    Välj upp till tolv platser
</p>

<div>

    <form asp-action="Choose" class="seats-grid">
        @foreach (var item in Model)
        {

            <div class="seat-num">
                <p>
                    @item.SeatNumber
                </p>
                <div class="seat-cont" id="@item.SeatNumber">
                    <input asp-for="@item.Booked" class="check-seat" name="@item.SeatId" type="checkbox" placeholder="@item.SeatId" />
                </div>
            </div>

        }
        <input name="viewingId" type="hidden" value="@Model.First().ViewingId" />

        <div class="form-group">
            <input type="submit" value="Fortsätt" class="btn btn-primary" />
        </div>
    </form>

</div>

<p id="seat-count">
    0
</p>
<form name="ignore_me">
    <input type="hidden" id="page_is_dirty" name="page_is_dirty" value="0" />
</form>